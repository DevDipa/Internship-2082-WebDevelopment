@{
    ViewData["Title"] = "Home Page";
}


<div class="home-dashboard">
     
    <div class="dashboard-header">
        <h1>Reader's Bookie Nook</h1>
    </div>

    <div class="stats-container">

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-book-open-reader"></i>
            </div>
            <div class="stat-info">
                <p class="stat-label">Books Read:</p>
                <h2 class="stat-value">0</h2>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-file-lines"></i>
            </div>
            <div class="stat-info">
                <p class="stat-label">Pages Read:</p>
                <h2 class="stat-value">0</h2>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-calendar-days"></i>
            </div>
            <div class="stat-info">
                <p class="stat-label">Reading Streak:</p>
                <h2 class="stat-value">0</h2>
            </div>
        </div>

    </div>
    
    <div class="user-report-container">

        <div class="user-report-card">
            <h3>Active Users</h3>
            <ul>
                @foreach (var user in ViewBag.ActiveUsers)
                {
                    <li>@user.Username (@user.Email)</li>
                }
            </ul>
        </div>

        <div class="user-report-card">
            <h3>Inactive Users</h3>
            <ul>
                @foreach (var user in ViewBag.InactiveUsers)
                {
                    <li>@user.Username (@user.Email)</li>
                }
            </ul>
        </div>

    </div>


    

</div>