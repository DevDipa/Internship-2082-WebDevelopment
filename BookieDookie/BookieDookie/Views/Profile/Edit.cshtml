@model BookieDookie.Models.User


<link rel="stylesheet" href="~/css/profile.css" />

<div class="profile-container">
    <div class="profile-card">
        <h2>Edit Profile</h2>

        <form method="post">
            <input type="hidden" asp-for="Id" />

            <input asp-for="Email" placeholder="Email" required />
            <input asp-for="Username" placeholder="Username" required />
            <input asp-for="Password" type="password" placeholder="Password" required />

            <button type="submit" class="main-btn">Save Changes</button>
        </form>
    </div>
</div>